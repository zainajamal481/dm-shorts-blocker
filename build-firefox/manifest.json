{
  "manifest_version": 2,
  "name": "YouTube Shorts Blocker",
  "version": "1.0.3",
  "description": "Blocks access to YouTube Shorts and hides related elements",
  "permissions": [
    "activeTab",
    "storage",
    "webNavigation"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "YouTube Shorts Blocker"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "applications": {
    "gecko": {
      "id": "fami1ycrea1or@gmail.com"
    }
  }
}
